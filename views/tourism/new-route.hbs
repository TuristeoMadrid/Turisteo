<div class="general-content">
  <h2>Name</h2>
  <form action="/visit/create" method="post">
    <div class="form-group">
      <div class="container-fluid d-flex bd-highlight px-0">
        <div class="col-md-6 px-0">
          <div class="name flex-fill bd-highlight">
            <input type="text" name="name" id="name" class="form-control" placeholder="Route name">
          </div>
        </div>
          <div class="layout-buttons">
            <div class="time px-2 bd-highlight d-flex align-items-center justify-content-center flex-row">
              <a href="#" id="time" class="btn buttonred my-0">Estimate route</a>
              <span class="time-est mx-2  " id="estimated"></span>
            </div>
          </div>
      </div>

      <br>
      <div class="description">
        <label for="description">Route description:</label>
        <input type="text" name="description" id="description" class="form-control" placeholder="Describe your route">
      </div>
      <br>
      <div class="route">
        <h3>Places</h3>
      </div>
    </div>
    <div class="layout-buttons">
      <div><button type="submit" class="btn buttongreen" hidden="hidden" id="create">Create</button></div>
    </div>
  </form>
  <br>
  <div id="map" style="height:500px"></div>
</div>
<script>
  window.places = {{{ placesStr }}}
</script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/geolocalize.js"></script>
<script src="/javascripts/time.js"></script>
<script src="/javascripts/select.js"></script>