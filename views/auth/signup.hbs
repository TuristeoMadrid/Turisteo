<div class="general-content">
  <h2>Signup</h2>
  <form action="/auth/signup" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="Username" class="form-control">
      <br><br>
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password" class="form-control">
      <br><br>
      <label for="email">Email</label>
      <input type="email" name="email" id="email" class="form-control" aria-describedby="emailHelp" placeholder="Your email">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <br><br>
      <div class="layout-buttons">
        <button class="btn buttongreen">Create account</button>
      </div>
      <br><br>
      <div class="d-flex flex-row justify-content-center align-items-center">
        <span class="account-message">Do you already have an account?</span>
        <div class="layout-buttons px-2">
          <a href="/auth/login" class="btn buttonred">Log in</a>
        </div>
      </div>
    </div>
  </form>
</div>